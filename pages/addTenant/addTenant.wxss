/* pages/addTenant/addTenant.wxss */

.container {
  padding: 20px;
}

.header {
  margin-bottom: 40px;
  text-align: center;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #007AFF;
}

.form-item {
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
}

.form-label {
  margin-bottom: 8px;
  font-size: 16px;
  color: #333333;
}

input {
  padding: 10px;
  border: 1px solid #cccccc;
  border-radius: 8px;
  font-size: 16px;
}

.submit-button {
  width: 100%;
  background-color: #007AFF;
  color: white;
  padding: 15px;
  font-size: 18px;
  border: none;
  border-radius: 10px;
  transition: background-color 0.3s;
}

.submit-button:hover {
  background-color: #005BBB;
}
